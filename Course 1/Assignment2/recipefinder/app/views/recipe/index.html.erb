<h1> Search for - <%= @search_term %> </h1>

<% if @recipes.nil? or @recipes.empty? %> 
  <p> No recipes found </p>
<% else %>
  <table border="1"> 
    <tr> 
      <th> Image </th>
      <th> Title </th>
      <th> Social Rank </th>
    </tr>
    <% @recipes.each do |recipe| %> 
      <tr class=<%= cycle("even", "odd") %> >
        <td> <%= link_to(image_tag(recipe["image_url"], height: '100', width: '100'), 
        recipe["f2f_url"]) %> </td>
        <td> <%= link_to(recipe["title"], recipe["f2f_url"]) %> </td>
        <td> <%= recipe["social_rank"] %> </td>
      </tr>
    <% end %>
  </table>
<% end %> 